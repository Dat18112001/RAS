@{
    ViewData["Title"] = "Trang chủ";
}

@model List<HakunaMatata.Models.ViewModels.VM_News>

@section scripts{
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=MY_API_KEY&callback=LoadMarker">
    </script>
    <script type="text/javascript" src="~/assets/js/maplace-active.js"></script>
}
<!-- main news start -->
<div>
    <div class="container-news">
        <div class="container">
            <div class="sesion-link">
                <a href="/" class="sesion-link-item">
                    <span>Home</span>
                    <i class="fa fa-angle-right"></i>
                </a>
                <a href="/" class="sesion-link-item">
                    <span>News</span>
                    <i class="fa fa-angle-right"></i>
                </a>
                <a href="/" class="sesion-link-item">
                    <span>ACT</span>
                </a>
            </div>
        </div>
        <div class="container-first-content">
            <div class="container">
                <div class="container-title-box">
                    <h3 class="container-title-text">ACT Real Estate and Property Market News</h3>
                 </div>
            </div>
        </div>
    </div>
</div>
<!-- main news end -->
<!-- body news start -->
        <div class="container">
            <div class="container-body-news row">
            <div class="col-7 line-right news-list">
                <div class="news-item">
                    <a href="/" class="row">
                        <div class="img-news-box col-6"></div>
                        <div class="news-info-box col-6">
                        <div class="news-title">@Model.FirstOrDefault()?.Title</div>
                            <div class="authur-times">
                                <div class="authur-text">Jessica Taulaga</div>
                                <div class="times-text">June 17, 2023</div>
                            </div>
                            <p class="text-color news-content">The residence at 30 Crozier Circuit spans 997 square metres of land.</p>
                        </div>
                    </a>
                </div>
            @foreach (var item in Model)
            {
                <div class="news-item-second">
                    <a asp-action="NewsDetails" asp-route-id="@item.Id" class="row">
                        <div class="img-news-box col-5" style="background-image: url(../images/@item.UrlImage);"></div>
                        <div class="news-info-box-second col-7">
                            <div class="news-title" style="color:white">@item.Title</div>
                            <div class="authur-times">
                                <div class="authur-text">Jessica Taulaga</div>
                                <div class="times-text" style="color:white">June 17, 2023</div>
                            </div>

                        </div>
                    </a>
                </div>
            }
            </div>

            <div class="col-5">
                <div class="h3 text-color line-bottom" style="color:white">We recommend</div>
            @{
                var random = new Random();
                var randomItems = Model.OrderBy(x => random.Next()).Take(4);
            }

            @foreach (var item in randomItems)
            {
                <div class="row flash-news">
                    <div class="col-6">
                        <img class="img-flash-news" src="../images/@item.UrlImage" />
                    </div>
                    <div class="col-6">
                        <p class="text-color" style="color:white">@item.Title</p>
                    </div>
                </div>
            }

            </div>

        </div>

        </div>
    <!-- body news end -->

<style>
    .text-color{
        color:black;
    }
    .container-news{
        margin-top:20vh;
    }
        .container-text{
            padding-bottom: 20px;
        }
        .name-news{
            padding-top: 12px;
        }
        .container-title-text{
            margin-bottom: 0;
            font-size: 32px;
            line-height: 40px;
            font-weight: 600;
            text-transform: none;
            color: #fff; 
            text-shadow: 0 0 3px #888;
        }
        .container-first-content{
            background-image: url('/assets/img/bg/4.png');
            background-position: center;/*điều chỉnh góc độ hình ảnh*/
            background-repeat: no-repeat; 
            background-size: cover;
            width: 100%;
            height:250px;
            display: flex;
            align-items: center;
        }
        .img-first-content{
            height:100%;
            
        }
        
        .img-flash-news{
            height: 100%;
        }
        .flash-news{
            padding: 28px 0;
        }
        
        .container-body-news{
            padding-top:20px;
        }
        .line-right{
            border-right: 1px solid #F1F5FA;
        }
        .line-bottom,
        .flash-news{
            border-bottom: 1px solid #F1F5FA;
        }

        .sesion-link{
            margin: 17px 0 21px;
        }

        .container-title-box{
            width: auto;
            height: 52px;
        }
        .authur-times{
            display: flex;
            margin: 16px 0;
        }
        .times-text{
            color: #222;
        }
        .authur-text{
            margin-right: 10px;
            padding-right: 10px;
            border-right: 1px solid #d8dbdf;
            color: #aab5c9;
            font-weight: 600;
        }
        .news-title{
            font-size: 22px;
            line-height: 28px;
            font-weight: 600;
            text-transform: none;
            color: #000;
        }
        .img-news-box{
            background-image: url('../assets/img/banner/1.jpg');
            background-position: center;/*điều chỉnh góc độ hình ảnh*/
            background-repeat: no-repeat;
            background-size: cover;
        }
        .news-info-box{
            padding: 32px;
            background-color: #f1f5fa;
            height: 100%;
        }
        .news-info-box-second{
            padding: 32px;
            height: 100%;
        }
        .news-content{
            line-height: 20px;
        }
        .news-item{
            height: 285px;
            margin-bottom: 24px;
            overflow: hidden;
        }
        .news-item-second{
            height: 248px;
            padding: 24px 0;
            border-top: 1px solid  #F1F5FA;
            overflow: hidden;
        }

        .keyword-text{
            padding: 6px 10px;
            background-color: #F1F5FA;
            border-radius: 24px;
        }
</style>

